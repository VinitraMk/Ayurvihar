<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="40sp"
            android:layout_marginTop="25dp"
            android:textColor="@android:color/black"
            android:text="Health Check Up"
            android:gravity="center"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:layout_marginTop="10dp"
            android:text="General Health Checkup Details"
            android:gravity="center"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginTop="10dp"
            android:layout_gravity="center">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Child Id: "
                android:textSize="22sp"
                android:gravity="right"
                android:textColor="@android:color/black"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:text=""
                android:id="@+id/childidn"
                android:textColor="@android:color/black"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginTop="10dp"
            android:layout_gravity="center">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Health Checkup No: "
                android:textSize="22sp"
                android:gravity="right"
                android:textColor="@android:color/black"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:text=""
                android:id="@+id/chkno"
                android:textColor="@android:color/black"
                android:layout_weight="1"/>
        </LinearLayout>

        <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:textSize="27sp"
            android:id="@+id/chkdate"
            android:hint="Check Up Date"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"/>
        <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:textSize="27sp"
            android:id="@+id/height"
            android:inputType="numberDecimal"
            android:hint="Height"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"/>
        <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:textSize="27sp"
            android:id="@+id/weight"
            android:inputType="numberDecimal"
            android:hint="Weight"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"/>
        <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:textSize="27sp"
            android:id="@+id/remark"
            android:hint="Remarks"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"/>
        <Button
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:id="@+id/addrep"
            android:text="Add Report"
            android:layout_marginTop="10dp"
            android:textSize="30sp"/>

    </LinearLayout >

</ScrollView>

